---
import "../styles/global.css";
import Header from "../components/Header.astro";
import { ui } from "../i18n/ui.js";

const locale = (Astro.locals?.lang ?? 'en') as 'en' | 'fr';
console.log('Locale in index:', locale);
---

<!doctype html>
<html lang={locale} data-theme="light" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="h-full">
		<div class="h-full flex flex-col min-h-0 bg-primary">
			<div class="flex-1 min-h-0">
				<Header />
				<form class="flex flex-col px-6 pt-4 pb-4 glass bg-primary" method="POST" action={Astro.url.pathname}>
					<select
						name="language"
						class="select"
						onchange="this.form.submit()"
					>
						<option disabled selected="true"
							>{ui[locale].nav.language}</option
						>
						<option value="en">English</option>
						<option value="fr">Fran√ßais</option>
					</select>
				</form>
				<slot />
			</div>
		</div>
	</body>
</html>
