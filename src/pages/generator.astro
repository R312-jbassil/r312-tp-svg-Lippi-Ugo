---
import Layout from "../layouts/Layout.astro";
const svgCode = `<svg
        width="200"
        height="200"
        xmlns="http://www.w3.org/2000/svg"
    >
        <g id="car-body">
            <rect x="40" y="100" width="120" height="40" rx="10" fill="blue"
            ></rect>
            <rect x="60" y="70" width="80" height="30" rx="10" fill="blue"
            ></rect>
        </g>
        <g id="windows">
            <rect x="65" y="75" width="30" height="20" rx="4" fill="lightblue"
            ></rect>
            <rect x="105" y="75" width="30" height="20" rx="4" fill="lightblue"
            ></rect>
        </g>
        <g id="wheels">
            <circle cx="60" cy="140" r="10" fill="black"></circle>
            <circle cx="140" cy="140" r="10" fill="black"></circle>
        </g>
        <g id="details">
            <circle cx="130" cy="115" r="3" fill="yellow"></circle>
        </g>
    </svg>`;
---

<Layout>
    <div
        class="flex flex-col h-full items-center justify-center glass bg-primary"
    >
        <!-- üñºÔ∏è Aper√ßu + üíª Code c√¥te √† c√¥te -->
        <div class="flex flex-col gap-8 mx-auto p-8 w-full md:flex-row">
            <!-- Aper√ßu SVG -->
            <div
                class="card bg-base-100 shadow-md p-6 flex-1 flex flex-col items-center justify-center"
            >
                <h2 class="text-xl font-bold mb-4">Aper√ßu SVG</h2>
                <div
                    class="border border-dashed border-primary p-4 w-full flex justify-center items-center min-h-[250px] bg-gradient-to-br from-blue-50 to-blue-100"
                >
                    <div innerHTML={svgCode}></div>
                </div>
            </div>

            <!-- Code SVG -->
            <div
                class="card bg-neutral text-neutral-content shadow-md p-6 flex-1"
            >
                <pre
                    class="bg-neutral text-neutral-content p-4 rounded overflow-x-auto text-sm">
                {svgCode}
            </pre>
            </div>
        </div>

        <!-- üìù Prompt en dessous, pleine largeur -->
        <div class="flex gap-4 w-full max-w-3xl px-8 mb-8">
            <input
                type="text"
                placeholder="D√©crivez votre SVG..."
                class="input input-bordered w-full"
            />
            <button class="btn btn-secondary">G√©n√©rer</button>
        </div>
    </div>
</Layout>
