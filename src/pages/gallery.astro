---
import Layout from '../layouts/Layout.astro';
import PocketBase from 'pocketbase';

const pb = new PocketBase('http://127.0.0.1:8090'); // adapte l'URL si n√©cessaire

let records = [];

try {
  records = await pb.collection('svgs').getFullList({ sort: '-created' });
} catch (err) {
  console.error('Erreur PocketBase :', err);
}
---

<Layout>
  <section class="max-w-6xl mx-auto px-6 py-10">
    <h1 class="text-3xl font-bold mb-8 text-center">üé® Galerie des SVG enregistr√©s</h1>

    {records.length === 0 ? (
      <p class="text-center text-lg text-error">Aucun SVG enregistr√© pour le moment.</p>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {records.map((record) => (
          <div class="card bg-base-100 shadow-md p-4">
            <h2 class="text-lg font-semibold mb-2">{record.name}</h2>
            <div
              class="border border-dashed border-primary p-4 bg-gradient-to-br from-blue-50 to-blue-100 min-h-[200px] flex justify-center items-center"
              innerHTML={record.svg}
            ></div>
            <pre class="mt-4 text-sm bg-neutral text-neutral-content p-2 rounded overflow-auto whitespace-pre-wrap">
              {record.svg}
            </pre>
          </div>
        ))}
      </div>
    )}
  </section>
</Layout>